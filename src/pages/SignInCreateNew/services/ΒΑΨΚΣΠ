rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match the /users collection and only allow read/write if the user is authenticated
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule for any other document - Deny all read/write access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
